{
  "name": "presentation",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build:win": "vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --win",
    "electron:build:win:portable": "vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --win portable",
    "electron:build:mac": "vite build && electron-builder build --mac"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^6.0.0",
    "wait-on": "^8.0.2"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.esep.presentation",
    "productName": "ESEP Presentation",
    "files": [
      "dist/**",
      "electron/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "ESEP-${version}-portable.${ext}",
      "icon": "public/images/Esep.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/images/Esep.png"
    }
  }
}
